@model ExpenseTracker.Models.Expense

<h1>Add Expense</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CategoryEnum"></label>
        <select asp-for="CategoryEnum" class="form-control" asp-items="Html.GetEnumSelectList<ExpenseCategory>()">
        </select>
        <span asp-validation-for="CategoryEnum" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
